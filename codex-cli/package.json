{
  "name": "@openai/codex",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "codex-flow": "dist/bin/codex.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx bin/codex.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "format": "prettier \"**/*.{ts,tsx,js,json,yaml,yml}\" --check",
    "format:fix": "prettier \"**/*.{ts,tsx,js,json,yaml,yml}\" --write",
    "stage-release": "echo stage-release",
    "start:flow": "node bin/codex.js flow run flows/examples/code-assistant.flow.yaml -i 'Hello' --profile local"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "pino": "^9.0.0",
    "yargs": "^17.7.2",
    "zod": "^3.22.4",
    "yaml": "^2.3.4",
    "expr-eval": "^2.0.2",
    "diff": "^5.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0",
    "marked-terminal": "7.3.0",
    "typescript-eslint": "^8.8.0",
    "@types/yargs": "^17.0.32",
    "@vitest/coverage-v8": "^1.6.0"
  },
  "engines": {
    "node": ">=20"
  }
}
